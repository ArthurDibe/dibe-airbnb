<div id="search-section" class="container-fluid mt-4 pt-5">
    <div class="row m-0">
        <div id="form-border" class="bg-light col col-sm-8 col-md-7 col-lg-4 mt-5 pl-5 pr-5 pt-4 pb-4 rounded">
            
            <div class="pad">
                <form method="POST" action="/">
                        <h2 class="h2 mb-5 font-weight-bold">Book unique places to stay and things to do</h2>
                        <label for="where">WHERE</label>
                        <div class="form-group">
                            <select name="where" id="where" class="form-control" required>
                                <option value="" disabled selected hidden>Anywhere</option>
                                <option value="Toronto">Toronto</option>
                                <option value="St. Johns">St. John's</option>
                                <option value="Halifax">Halifax</option>
                                <option value="Charlottetown">Charlottetown</option>
                            </select>
                        </div>
                        <label for="checkin">CHECK-IN</label>
                        <div class="form-group">
                            <input type="date" class="form-control" name="checkin" id="checkin">
                        </div>

                        <label for="checkout">CHECKOUT</label>
                        <div class="form-group">                        
                            <input type="date" class="form-control" name="checkout" id="checkout">
                        </div>

                        <label for="guests">GUESTS</label>
                        <div class="form-group">
                            <select name="guests" id="guests" class="form-control">
                                <option value="0" selected>No Guests</option>
                                <option value="1">1 Guest</option>
                                <option value="2">2 Guests</option>
                                <option value="3">3 Guests</option>
                            </select>
                        </div>
                        
                        <input class="button-airbnb btn btn-none btn-lg float-right" type="submit" name="submit" value="Search">
                </form>
            </div>
        </div>
    </div>
</div>

<section class="container-fluid pt-5 pb-5 bg-dark">
    <div id="promo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#promo" data-slide-to="0" class="active"></li>
            <li data-target="#promo" data-slide-to="1"></li>
            <li data-target="#promo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
        
            <div class="carousel-item active">
                <img src="/uploads/{{rooms.0.roomPic}}" alt="{{rooms.0.roomPic}}">
                <div class="carousel-caption">
                        <h1>{{rooms.0.roomTitle}}</h1>
                        <h3>Located in {{rooms.0.location}}</h3>
                        <p>{{rooms.0.description}}</p>
                </div>   
            </div>
            <div class="carousel-item">
                <img src="/uploads/{{rooms.1.roomPic}}" alt="{{rooms.1.roomPic}}">
                <div class="carousel-caption">
                        <h1>{{rooms.1.roomTitle}}</h1>
                        <h3>Located in {{rooms.1.location}}</h3>
                        <p>{{rooms.1.description}}</p>
                </div>   
            </div>
            <div class="carousel-item">
                <img src="/uploads/{{rooms.2.roomPic}}" alt="{{rooms.2.roomPic}}">
                <div class="carousel-caption">
                        <h1>{{rooms.2.roomTitle}}</h1>
                        <h3>Located in {{rooms.2.location}}</h3>
                        <p>{{rooms.2.description}}</p>
                </div>   
            </div>

        </div>
        <a class="carousel-control-prev" href="#promo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#promo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

</section>

