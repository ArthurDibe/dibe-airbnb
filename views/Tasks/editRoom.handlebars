<h1 class="title">EDIT ROOM</h1>
{{#if message}}
<div class="errCONTAINER">
    {{#each message}}
    <div class="errors">{{this}}</div>  <!-- the element of each interation of the message object has in errors array -->
    {{/each}}
</div>
{{/if}}

<div class="backButton">
    <a href="/admin/list">
        <svg class="svg-icon" viewBox="0 0 20 20">
			<path fill="black" d="M8.388,10.049l4.76-4.873c0.303-0.31,0.297-0.804-0.012-1.105c-0.309-0.304-0.803-0.293-1.105,0.012L6.726,9.516c-0.303,0.31-0.296,0.805,0.012,1.105l5.433,5.307c0.152,0.148,0.35,0.223,0.547,0.223c0.203,0,0.406-0.08,0.559-0.236c0.303-0.309,0.295-0.803-0.012-1.104L8.388,10.049z"></path>
		</svg>
    </a>
    PREVIOUS PAGE
</div>
<form class="formDESKTOP" method="POST" action="/task/updateRoom/{{room._id}}/?_method=PUT" enctype="multipart/form-data">
    <fieldset>
        <label>Room Title:</label>
        <div class="inputREGIST">
            <input type="text" name="roomTitle" id="roomTitle" value="{{room.roomTitle}}" placeholder="Enter the title of the Room">
        </div>

        <label>Room Price:</label>
        <div class="inputREGIST">
            <input type="text" name="price" id="price" value="{{room.price}}" placeholder="Enter the room's price">
        </div>

        <label>Room Description:</label>
        <textarea name="description" id="description" maxlength="100">{{room.description}}</textarea>

        <label>Room Location:</label>
        <select name="location" id="where">
            <option value="{{room.location}}" disabled selected hidden>{{room.location}}</option>
            <option value="Toronto">Toronto</option>
            <option value="St. Johns">St. John's</option>
            <option value="Halifax">Halifax</option>
            <option value="Charlottetown">Charlottetown</option>
        </select>
        <br><br>
        <label>Current Room's Image:</label>
        <img style="width:300px; display:block;" src="/uploads/{{room.roomPic}}" alt="room">
        <input type="file" name="roomPic" value="/uploads/{{room.roomPic}}"> 
        <br><br>
        <input type="submit" name="submit" value=" Update Room ">
    </fieldset>
</form>