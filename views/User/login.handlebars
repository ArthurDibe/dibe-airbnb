<div id="login-page" class="container-fluid pt-5">
    <div id="login-form" class="container mt-2 pt-5 rounded">
        <div class="row justify-content-center align-items-center m-0">
            <div id="form-border" class="bg-light col col-sm-9 col-md-7 col-lg-5 pb-3 rounded">

                <h1 class="display-4 mb-1">Login</h1>

                {{#if message}}
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Attention !</h4>
                    {{#each message}}
                        {{this}} <br>  <!-- the element of each interation of the message object has in errors array -->
                    {{/each}}
                </div>
                {{/if}}

                <form action="/user/login" method="POST">
                    <div class="form-group">
                        <label for="email">Enter Your Username:</label>
                        <span class="row pl-3">
                            <input class="col-10 form-control" type="email" name="email" placeholder="Username" id="email">
                            <svg class="col-2 pl-0" height="24" width="24" viewbox="0 0 20 20">
                                <path d="m 22.5 4 h -21 c -0.83 0 -1.5 0.67 -1.5 1.51 v 12.99 c 0 0.83 0.67 1.5 1.5 1.5 h 20.99 a 1.5 1.5 0 0 0 1.51 -1.51 v -12.98 c 0 -0.84 -0.67 -1.51 -1.5 -1.51 Z m 0.5 14.2 l -6.14 -7.91 l 6.14 -4.66 v 12.58 Z m -0.83 -13.2 l -9.69 7.36 c -0.26 0.2 -0.72 0.2 -0.98 0 l -9.67 -7.36 h 20.35 Z m -21.17 0.63 l 6.14 4.67 l -6.14 7.88 Z m 0.63 13.37 l 6.3 -8.1 l 2.97 2.26 c 0.62 0.47 1.57 0.47 2.19 0 l 2.97 -2.26 l 6.29 8.1 Z"></path>
                            </svg>
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="passwd">Enter Your Password:</label>
                        <span class="row pl-3">
                            <input class="col-10 form-control" type="password" name="passwd" placeholder="Password" id="passwd">
                            <svg class="col-2 pl-0 eyebox" height="24" width="24" viewbox="0 0 20 20" onclick="eye()">
                                <path d="m 21.53 18.07 c 0.15 0.22 0.46 0.28 0.69 0.13 a 0.47 0.47 0 0 0 0.14 -0.66 l -1.32 -1.9 c 1.86 -1.33 2.97 -3.11 2.97 -5.17 a 0.49 0.49 0 0 0 -0.5 -0.48 a 0.49 0.49 0 0 0 -0.5 0.48 c 0 3.82 -4.73 6.7 -11 6.7 s -11 -2.87 -11 -6.7 a 0.49 0.49 0 0 0 -0.5 -0.48 a 0.49 0.49 0 0 0 -0.5 0.48 c 0 2.05 1.11 3.84 2.97 5.17 l -1.32 1.9 a 0.47 0.47 0 0 0 0.14 0.66 c 0.23 0.15 0.54 0.09 0.69 -0.13 l 1.32 -1.9 c 0.94 0.55 2.03 0.99 3.23 1.32 a 0.29 0.29 0 0 0 -0.01 0.04 l -0.58 2.23 a 0.48 0.48 0 0 0 0.36 0.58 a 0.5 0.5 0 0 0 0.61 -0.35 l 0.58 -2.23 l 0.01 -0.04 c 1.1 0.23 2.28 0.37 3.51 0.4 v 2.4 a 0.49 0.49 0 0 0 0.5 0.48 a 0.49 0.49 0 0 0 0.5 -0.48 v -2.4 a 19.39 19.39 0 0 0 3.51 -0.4 l 0.01 0.04 l 0.58 2.23 a 0.5 0.5 0 0 0 0.61 0.35 a 0.48 0.48 0 0 0 0.36 -0.58 l -0.58 -2.23 l -0.01 -0.04 c 1.2 -0.33 2.29 -0.77 3.23 -1.32 Z"></path>
                            </svg>
                        </span>
                    </div>

                    <button type="submit" class="button-airbnb submit-airbnb btn btn-none btn-lg btn-block">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>